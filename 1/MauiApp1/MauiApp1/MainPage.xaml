<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.MainPage"
             Title="Учёт расходов">

    <ContentPage.BindingContext>
        <vm:ExpenseViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Учёт расходов" 
                   FontSize="24" 
                   HorizontalOptions="Center"/>

            <Entry Placeholder="Категория" 
                   Text="{Binding Category}" />

            <Entry Placeholder="Сумма"
                   Keyboard="Numeric"
                   Text="{Binding Amount}" />

            <Button Text="Добавить расход"
                    Clicked="OnAddExpenseClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>

            <Label Text="{Binding Total, StringFormat='Итого: {0} ₽'}"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Expenses}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ddd" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Category}" FontAttributes="Bold"/>
                                <Label Text="{Binding Amount, StringFormat='{0:C}'}"/>
                                <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
