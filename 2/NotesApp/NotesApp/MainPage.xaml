<ContentPage
    x:Class="NotesApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Заметки">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label 
                Text="Добавить новую заметку"
                FontSize="20"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="TitleEntry"
                Placeholder="Введите заголовок..." />

            <Editor 
                x:Name="ContentEditor"
                Placeholder="Введите текст заметки..."
                HeightRequest="100" />

            <Button 
                Text="Добавить"
                Clicked="OnAddNoteClicked"
                BackgroundColor="#0078D7"
                TextColor="White" />

            <Label 
                x:Name="EmptyLabel"
                Text="Список заметок пуст"
                HorizontalOptions="Center"
                IsVisible="True"
                FontAttributes="Italic" />

            <CollectionView x:Name="NotesList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#ccc" StrokeThickness="1" Margin="0,5" Padding="10" StrokeShape="RoundRectangle 8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Content}" FontSize="14" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
